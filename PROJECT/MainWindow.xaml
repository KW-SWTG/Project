                </Grid>
                <Grid Grid.Column="2" Margin="10">
                    <Button x:Name="poster1" HorizontalAlignment="Left"  Height="267"  VerticalAlignment="Center" Width="174" Click="poster1_Click" Foreground="{x:Null}" BorderBrush="#FFB3DC8A" Style="{DynamicResource ButtonStyle1}">
