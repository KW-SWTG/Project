                    </Button>
                </Grid>
                <Grid Grid.Column="5" Margin="10">
                    <Button x:Name="Poster5" HorizontalAlignment="Left" Height="267" VerticalAlignment="Center" Width="165" BorderBrush="{x:Null}" Style="{DynamicResource ButtonStyle1}" Background="red"></Button>
                </Grid>
                <Grid Grid.Column="6" Margin="10">
                    <Button x:Name="Poster6" HorizontalAlignment="Left" Height="267" VerticalAlignment="Center" Width="165" BorderBrush="{x:Null}" Style="{DynamicResource ButtonStyle1}" Background="red"></Button>
                </Grid>
                <Grid Grid.Column="7" Margin="10">
                    <Button x:Name="Poster7" HorizontalAlignment="Left" Height="267" VerticalAlignment="Center" Width="165" BorderBrush="{x:Null}" Style="{DynamicResource ButtonStyle1}" Background="red"></Button>
                </Grid>
